<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/Game_relativeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/tictactoebg2"
    tools:context=".Game_Activity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50sp"
        android:orientation="horizontal">

        <TextView
            android:padding="10sp"
            android:id="@+id/tv_player_1_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="50sp"
            android:background="@drawable/button"
            android:gravity="center"
            android:text="player_1_name"
            android:textSize="25sp" />

        <TextView
            android:padding="10sp"
            android:id="@+id/tv_player_2_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button"
            android:gravity="center"
            android:text="player_2_name"
            android:textSize="25sp" />
    </LinearLayout>
    <Button
        android:onClick="newGame"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="60sp"
        android:background="#d5e29f"
        android:textColor="#1f2212"
        android:text="new game"/>
</RelativeLayout>